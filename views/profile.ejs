<% include ./partials/header.ejs %>
  <div class="full w-full min-h-screen bg-zinc-900 text-white py-5 relative overflow-hidden">
      <div class="menuSlider absolute h-full w-[50%] md:w-[25%] bg-zinc-800 top-0 z-[99] right-[-50%] md:right-[-25%] p-4">
        <div class="menutop flex justify-between items-center mb-3">
          <h1 class="text-2xl">Menu</h1>
          <i class="close ri-close-line scale-[1.3]"></i>
        </div>
        <a href="/changePassword" class="px-3 block py-2">Change password</a>
        <a href="/savedPost" class="px-3 block py-2">Saved post</a>
        <a href="/logout" class="px-3 block py-2">Log out</a>
      </div>
      <div class="nav flex justify-between items-center px-4 md:px-8 max-w-6xl mx-auto">
        <h3 class="text-lg font-bold"><%= user.username %></h3>
        <div class="icons flex gap-5">
          <a href="/upload"><i class="text-[1.4rem] ri-add-box-line"></i></a>
          <i class="menu text-[1.4rem] ri-menu-line"></i>
        </div>
      </div>
      <div class="flex justify-between items-center pl-6 pr-[12vw] mt-8 md:px-8 max-w-6xl mx-auto">
        <div class="w-[19vw] h-[19vw] md:w-40 md:h-40 overflow-hidden rounded-full">
          <img class="w-full h-full object-cover" src="/images/uploads/<%=user?.profileImage%>" alt="hello">
        </div>
        <div class="stats flex gap-5 md:gap-16 items-center justify-between">
          <div class="flex flex-col items-center justify-center">
            <h3 class="md:text-xl"><%= user.posts.length %></h3>
            <h4 class="md:text-base">Posts</h4>
          </div>
          <div class="flex flex-col items-center justify-center">
            <h3 class="md:text-xl"><%= user.followings.length %></h3>
            <h4 class="md:text-base">Followings</h4>
          </div>
          <div class="flex flex-col items-center justify-center">
            <h3 class="md:text-xl"><%= user.followers.length %></h3>
            <h4 class="md:text-base">Followers</h4>
          </div>
        </div>
      </div>
      <div class="dets px-6 mt-5 md:px-8 max-w-6xl mx-auto">
        <h3 class="text-lg md:text-xl mb-1"><%= user.name %></h3>
        <p class="text-xs md:text-sm tracking-tight opacity-50"><%= user.bio ?? "Click on edit profile to edit bio" %></p>
      </div>
      <div class="px-6 mt-5 md:px-8 max-w-6xl mx-auto">
        <a class="px-3 py-2 bg-zinc-800 text-xs md:text-sm rounded-md inline-block" href="/edit">Edit Profile</a>
      </div>
      <div class="posts w-full flex gap-1 md:gap-2 py-2 mt-5 flex-wrap px-0 md:px-8 max-w-6xl mx-auto">
        <% if(user?.posts?.length>0){ %>
          <% user?.posts?.reverse().forEach(function(post){ %>
            <div class="post w-[32.5%] h-32 md:h-72 overflow-hidden">
              <a href="/post/<%=post._id%>"><img class="h-full w-full object-cover" src="/images/uploads/<%=post.picture%>" alt=""></a>
            </div>
          <% }) %>
        <% }else{ %>
          <div class="w-full h-[50vh] flex justify-center items-center text-2xl">No post yet</div>
        <% } %>
      </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script>
    document.querySelector('.menu').addEventListener('click',()=>{
      var menuSlider = document.querySelector('.menuSlider')
      gsap.to(menuSlider,{
        right:'0'
      })
    })
    document.querySelector('.close').addEventListener('click',()=>{
      var menuSlider = document.querySelector('.menuSlider')
      gsap.to(menuSlider,{
        right:'-50%'
      })
    })
  </script>
<% include ./partials/footer.ejs %>