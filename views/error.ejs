<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-900 text-white py-5 flex flex-col items-center justify-center">
  <div class="flex flex-col items-center gap-5 px-4 md:px-8 lg:px-12">
    <h1 class="text-2xl md:text-4xl lg:text-5xl"><%= message %></h1>
    <% if (error.status) { %>
      <h2 class="text-xl md:text-2xl lg:text-3xl">Status: <%= error.status %></h2>
    <% } %>
    <% if (process.env.NODE_ENV === 'development' && error.stack) { %>
      <pre class="mt-4 p-4 md:p-6 lg:p-8 bg-zinc-800 rounded overflow-auto max-w-full lg:max-w-3xl">
        <%= error.stack %>
      </pre>
    <% } %>
    <a href="/" class="mt-8 px-6 py-2 md:px-8 md:py-3 lg:text-lg bg-blue-500 rounded-md hover:bg-blue-600 transition-colors">
      Return Home
    </a>
  </div>
</div>
<% include ./partials/footer.ejs %>
