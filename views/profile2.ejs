<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-900 text-white py-5">
      <div class="nav flex justify-between items-center px-4">
        <h3 class="text-lg font-bold"><%= clickedUser.username %></h3>
      </div>
      <div class="flex justify-between items-center pl-6 pr-[12vw] mt-8">
        <div class="w-[19vw] h-[19vw] overflow-hidden rounded-full">
          <img class="w-full h-full object-cover" src="/images/uploads/<%=clickedUser.profileImage%>" alt="">
        </div>
        <div class="stats flex gap-5 items-center justify-between">
          <div class="flex flex-col items-center justify-center">
            <h3><%= clickedUser.posts.length %></h3>
            <h4>Posts</h4>
          </div>
          <div class="flex flex-col items-center justify-center">
            <h3><%= clickedUser.followings.length %></h3>
            <h4>Followings</h4>
          </div>
          <div class="flex flex-col items-center justify-center">
            <h3><%= clickedUser.followers.length %></h3>
            <h4>Followers</h4>
          </div>
        </div>
      </div>
      <div class="dets px-6 mt-5">
        <h3 class="text-lg mb-1"><%= clickedUser.name %></h3>
        <p class="text-xs tracking-tight opacity-50"><%= clickedUser.bio ?? "Click on edit profile to edit bio" %></p>
      </div>
      <div class="px-6 mt-5 flex gap-3 justify-around">
        <% if(clickedUser.followers.indexOf(user._id) === -1){ %>
          <a class="px-7 py-2 bg-blue-500 w-full text-center text-xs rounded-md" href="/follow/<%=clickedUser._id%>">Follow</a>
          <% }else{ %>
          <a class="px-7 py-2 bg-zinc-800 text-xs w-[50%] text-center rounded-md" href="/follow/<%=clickedUser._id%>">Unfollow</a>
          <a class="px-7 py-2 bg-zinc-800 text-xs w-[50%] text-center rounded-md" href="/message/<%=clickedUser._id%>">Message</a>
        <% } %>
      </div>
      <div class="posts w-full flex gap-1 py-2 mt-5 flex-wrap">

        <% if(clickedUser.posts.length>0){ %>
          <% clickedUser.posts.reverse().forEach(function(post){ %>
            <div class="post w-[32.5%] h-32 overflow-hidden">
              <a href="/post/<%=post._id%>"><img class="h-full w-full object-cover" src="/images/uploads/<%=post.picture%>" alt=""></a>
            </div>
          <% }) %>
        <% }else{ %>
          <div class="w-full h-[50vh] flex justify-center items-center text-2xl">No post yet</div>
        <% } %>
        
      </div>
  </div>
<% include ./partials/footer.ejs %>